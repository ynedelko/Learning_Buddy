@mood = 1
student.feedbacks.each do |mood|
    if mood.lesson.id == @lesson.id
        @mood = mood
    end
end



<script>
$(document).ready(function(){
  html_first = '<input type="text" name="comment" class="form-control" ';
  html_last = '"  placeholer="e.g. Write comment here">';
  $('#add_comment').click(function(){
    $("#comment").append(html_first + html_last);
  });
});
</script>
